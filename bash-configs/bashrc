###############################################################################
# Set Terminal
###############################################################################
#export urxvt256c

###############################################################################
# Define functions
###############################################################################
function task_count {
    if [[ `task +in +PENDING count` -gt '0' ]]; then
        echo "[" `task +in +PENDING count` " task(s) ]:"
   else
        echo "$:"
    fi
}

